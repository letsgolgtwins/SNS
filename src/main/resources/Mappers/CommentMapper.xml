<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.comment.Mapper.CommentMapper">
	<!-- 댓글 쓰기 - db에 insert --> 
	<insert id="insertComment" parameterType="map">
		INSERT INTO `comment`
		(
			`commentId`
			,`postId`
			,`comment`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(	 
			#{userId} <!-- 댓글 단 유저의 Id(user테이블의 PK) -->
			, #{postId} <!-- user의 content -->
			, #{comment}
			, NOW()
			, NOW()
		)
	</insert>
	
	<!-- i) 댓글 불러오기 - db에서 select -->
	<select id="selectCommentList" resultType="com.sns.comment.domain.Comment">
		SELECT 
			`id`
			,`commentId`
			,`postId`
			,`comment`
			,`createdAt`
			,`updatedAt`
		FROM 
			`comment`
	</select>
	
	<!-- ii) 댓글 불러오기 - db에서 select -->
	<select id="selectCommentListByPostId" resultType="com.sns.comment.domain.Comment">
		SELECT 
			`id`
			,`commentId`
			,`postId`
			,`comment`
			,`createdAt`
			,`updatedAt`
		FROM 
			`comment`
		WHERE
			`postId` = #{postId}
	</select>
 </mapper>