<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.like.Mapper.LikeMapper">
 	<!-- 좋아요 insert -->
 	<insert id="insertLikeByPostIdAndUserId" parameterType="map">
 		INSERT INTO	`like`
 		(
 			`postId`
			,`userId`
			,`createdAt`
 		)
 		VALUES
 		(
 			#{postId}
 			, #{userId}
 			, NOW()
 		)
 	</insert>
 	
 	<!-- 좋아요 취소 delete -->
 	<delete id="deleteLikeByPostIdAndUserId" parameterType="map">
 		DELETE FROM 
 			`like`
 		WHERE
 			`postId` = #{postId}
 		AND
 			`userId`= #{userId}
 	</delete>
 	
 	<!-- 로그인 한 유저가(userId)가 특정글(postId)에 좋아요 눌렀는지 조회 -->
 	<select id="selectLikeCountByPostIdAndUserId" parameterType="map" resultType="com.sns.like.domain.Like">
 		SELECT 
 			`postId`
			,`userId`
			,`createdAt`
		FROM 
			`like`
		WHERE 
			`postId` = #{postId}
		AND
			`userId` = #{userId}
 	</select>
 	
 	<!-- 특정 글의 모든 좋아요 개수 조회 -->
 	<select id="selectLikeCountByPostId" parameterType="int">
 		SELECT 
	 		`postId`
			,`userId`
			,`createdAt`
		FROM 
			`like`
		WHERE
			`postId` = #{postId}
 	</select>
 </mapper>